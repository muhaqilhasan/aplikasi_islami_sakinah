<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_page"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_prayers"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <!-- Search Bar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_search_field"
            android:backgroundTint="@color/input_background"
            android:hint="@string/search_hint"
            android:textColorHint="@color/text_secondary"
            android:textColor="@color/text_primary"
            android:paddingStart="52dp"
            android:paddingEnd="16dp"
            android:inputType="text"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            app:tint="@color/text_secondary"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>
    </FrameLayout>

    <!-- Categories Filter (ChipGroup) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="20dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true"
            android:paddingEnd="16dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semua"
                android:checked="true"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/surface_card"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMorning"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pagi &amp; Petang"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/surface_card"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPrayer"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shalat"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/surface_card"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFood"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makanan"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/surface_card"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHome"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rumah"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/surface_card"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTravel"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perjalanan"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/surface_card"/>

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- List Doa -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPrayers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="80dp"/> <!-- Padding agar tidak tertutup nav bar -->

</LinearLayout>